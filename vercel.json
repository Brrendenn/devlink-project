{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "prisma": {
          "generator": "client"
        }
      }
    },
    {
      "src": "client/next.config.ts",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/:path*",
      "destination": "/client/:path*"
    }
  ]
}